<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:id="@+id/MainActivity2">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="18dp"
        android:text="@string/book"
        android:background="#F1EDE6"></TextView>
    <View
        android:layout_width="411dp"
        android:layout_height="281dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/v_calendar"></View>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:background="#E6E3DF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="@string/Select_area"
        android:textColorHint="#656562"
        android:drawableRight="@drawable/location"
        android:id="@+id/et_SA"
        android:inputType="text"
        android:imeOptions="actionNext"></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:background="#E6E3DF"
        app:layout_constraintTop_toBottomOf="@+id/et_SA"
        android:hint="@string/search"
        android:textColorHint="#656562"
        android:drawableRight="@drawable/search"
        android:id="@+id/et_S"
        android:inputType="text"
        android:imeOptions="actionNext"></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:background="#E6E3DF"
        app:layout_constraintTop_toBottomOf="@+id/et_S"
        android:hint="@string/date"
        android:textColorHint="#656562"
        android:drawableRight="@drawable/calendar"
        android:id="@+id/et_D"
        android:inputType="text"
        android:imeOptions="actionDone"></EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_D"
        android:text="@string/searcher"
        android:textSize="18sp"
        android:background="#DC3870"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:id="@+id/btn_search"
        android:onClick="btnsearch"></androidx.appcompat.widget.AppCompatButton>
</androidx.constraintlayout.widget.ConstraintLayout>